{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "no-use-before-define": "off",
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 120],
    "flowtype/define-flow-type": "error"
  }
}
